<%= form_for @conn, config_path(@conn, :update), [as: :config], fn f -> %>

    <div class="form-group">
      <%= label f, :file %>
        <%= textarea f, :file, class: "form-control", cols: "50", style: "font-family:monospace;height: 340px;max-width:960px" %>
    </div>

    <div class="form-group">
      <%= submit "Submit", class: "btn btn-primary" %>
    </div>

<% end %>
