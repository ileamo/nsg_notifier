<div style="max-width:950px">

  <%= form_for @conn, testapi_path(@conn, :update), [as: :testapi], fn f -> %>
    <div class="form-group">
      <%= label f, :json do "Событие в формате JSON:" end %>
      <%= textarea f, :event, value: @testapi["event"], class: "form-control",
                style: "font-family:monospace", rows: "5" %>
    </div>

    <div class="form-group">
      <%= submit "Применить", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
